@model List<Bloggie.Web.Models.Domain.Tag>
@{
}
<div class="bg-secondary bg-opacity-10 py-2 ">
    <div class="container">
        <h1>List of Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container">
    @if(Model!=null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>Display Name</th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>
                            @tag.Id
                        </td>

                        <td>
                            @tag.Name
                        </td>
                        <td>
                            @tag.DisplayName
                        </td>
                        <td>
                            <a asp-controller="AdminTag" asp-action="Edit" asp-route-ID="@tag.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-controller="AdminTag" asp-action="Delete" asp-route-ID="@tag.Id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>

        </table>
    }
    else{
        <p> No tags created! </p>
    }

   

</div>