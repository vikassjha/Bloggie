@model Bloggie.Web.Models.ViewModels.EditTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2 ">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">


    <form method="post">


        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="Id" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" />
        </div>
        <div class="d-flex">
            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update</button>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger ms-2" asp-controller="AdminTag" asp-action="Delete" >Delete</button>
            </div>
        </div>

    </form>
</div>